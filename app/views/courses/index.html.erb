<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <p class="text-center text-success"><%= notice %></p>

      <h1 class="text-center">Courses</h1>

      <div class="text-center">
      <% if can?(:create, Course) %>
        <%= link_to "New course", new_course_path, class: "btn btn-primary" %>
      <% end %>
        <%= link_to "Back to schools", schools_path, class: "btn btn-secondary" %>
      </div><br>

      <div id="courses">
        <% @courses.each do |course| %>
          <%= render course %>
          <p class="text-center">
            <%= link_to "Show this course", course, class: "btn btn-primary" %>
            <%= link_to "Create New batch", new_batch_path, class: "btn btn-secondary" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
