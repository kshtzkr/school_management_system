<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div id="<%= dom_id(course) %>" class="card">
        <div class="card-body">
          <h5 class="card-title">Course Details</h5>
          <p class="card-text">
            <strong>Name:</strong> <%= course.name %>
          </p>
          <p class="card-text">
            <strong>School:</strong> <%= course.school_id %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
